{
	"ConfiguracaoLoja": {
	  "type": "object",
	  "properties": {
		"id": {
		  "type": "string",
		  "format": "uuid",
		  "description": "Identificador único da configuração"
		},
		"nomeEmpresa": {
		  "type": "string",
		  "description": "Nome da empresa/loja"
		},
		"cnpj": {
		  "type": "string",
		  "description": "CNPJ da empresa"
		},
		"email": {
		  "type": "string",
		  "format": "email",
		  "description": "Email de contato principal"
		},
		"telefone": {
		  "type": "string",
		  "description": "Telefone de contato principal"
		},
		"endereco": {
		  "$ref": "#/Endereco",
		  "description": "Endereço da empresa"
		},
		"logoUrl": {
		  "type": "string",
		  "format": "uri",
		  "description": "URL do logo da loja"
		},
		"faviconUrl": {
		  "type": "string",
		  "format": "uri",
		  "description": "URL do favicon do site"
		},
		"corPrincipal": {
		  "type": "string",
		  "description": "Cor principal (hex)"
		},
		"corSecundaria": {
		  "type": "string",
		  "description": "Cor secundária (hex)"
		},
		"moeda": {
		  "type": "string",
		  "description": "Moeda utilizada (BRL, USD, etc.)"
		},
		"metasTags": {
		  "type": "object",
		  "description": "Meta tags para SEO"
		},
		"redesSociais": {
		  "type": "object",
		  "properties": {
			"facebook": {
			  "type": "string",
			  "format": "uri"
			},
			"instagram": {
			  "type": "string",
			  "format": "uri"
			},
			"twitter": {
			  "type": "string",
			  "format": "uri"
			},
			"youtube": {
			  "type": "string",
			  "format": "uri"
			}
		  },
		  "description": "Links para redes sociais"
		}
	  },
	  "required": ["id", "nomeEmpresa", "cnpj", "email", "telefone"]
	}
}
